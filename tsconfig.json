{
    "compilerOptions": {
        "baseUrl": ".",
        "target": "es5",
        "lib": ["ES6", "dom", "dom.iterable", "esnext", "WebWorker"],
        "allowJs": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "noFallthroughCasesInSwitch": true,
        "module": "esnext",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "jsx": "react-jsx",
        // "checkJs": true,
        "declaration": true,
        "emitDeclarationOnly": false,
        "declarationMap": true,
        "outDir": "dist",
        "skipDefaultLibCheck": true,
        "sourceMap": true,
        "noImplicitAny": true,
        "noImplicitThis": true,

        "paths": {
            "*": ["*", "components/*"]
        },
        "types": ["node", "jest","vite/client"],
        "typeRoots": ["node_modules/@types", "./typings"]
    },
    "include": ["src", "src/**/*", "./cypress.d.ts", "src/**/*.d.ts"],
    "exclude": ["node_modules", "dist", "src/**/*.test.*", "src/**/*.cy.*", "src/**/*.stories.*","src/libs/candlestick","charting_library"]
}
